<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/fondo1">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:alpha="0.5"
        android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CHOOSE"
        android:textSize="70sp"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WHERE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_marginTop="92dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     ARE YOU GOING TO INSTALL"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/kids_icon"
    android:onClick="eligiohijobutton"

    android:id="@+id/kidsbutton"
    android:layout_below="@+id/textView3"
    android:layout_marginTop="90dp"
    android:layout_marginLeft="250dp"

    />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/parents_ico"
        android:onClick="eligiopadrebutton"

        android:id="@+id/parentbutton"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"

        />


</RelativeLayout>
