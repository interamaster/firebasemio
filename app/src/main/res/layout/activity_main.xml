<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mio.jrdv.firebasemio.MainActivity">

    <Button
        android:id="@+id/newhijo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="A単adirhijo"
        android:text="a単adir hijo nuevo"
        />


    <Button
        android:id="@+id/newpadre"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="A単adirpadre"
        android:text="a単adir PADRE nuevo"
        android:layout_below="@+id/newhijo"
        />

    <Button
        android:id="@+id/verhijos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="VerMisHijos"
        android:text="VER MIS HIJOS"
        android:layout_below="@+id/newpadre"
        />

    <Button
        android:id="@+id/hacerfoto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="hacerfoto"
        android:text="HACER FOTO"
        android:layout_below="@+id/verhijos"
        />
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fotoIamgeview"
        android:layout_below="@+id/hacerfoto"
        app:siBorderWidth="6dp"
        app:siBorderColor="@android:color/darker_gray"
        android:scaleType="fitXY"
        />




</RelativeLayout>
